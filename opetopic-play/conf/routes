# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Database access
GET     /db                         controllers.Application.db

# SketchPad
GET	/sketchpad		    controllers.Application.sketchpad

# Prover
GET     /prover                     controllers.Application.prover

# Documentation
GET     /docs                       controllers.Application.showDoc(page = "intro")
GET     /docs/:page                 controllers.Application.showDoc(page)

# Tutorial
GET     /tutorial                   controllers.Application.showTutorial(page = "intro")
GET     /tutorial/:page             controllers.Application.showTutorial(page)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Webjars
GET     /webjars/*file              controllers.WebJarAssets.at(file)
